<h1>発注一覧</h1>

<table class="table">
  <thead>
    <tr>
      <th>発注日</th>
      <th>業者名</th>
      <th>合計金額</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.order_date %></td>
        <td><%= order.status %></td>
        <td><%= order.total_price %></td>
        <td>
          <%= link_to "詳細", order_path(order), class: "btn btn-info" %> 
          <%= link_to "編集", edit_order_path(order), class: "btn btn-warning" %> 
          <%= link_to "削除", order_path(order), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "新しい発注を作成", new_order_path, class: "btn btn-primary" %>
<%= link_to "発注リストを印刷", "/orders/print", class: "btn btn-primary", target: "_blank" %>

<% content_for :head do %>
  <link rel="stylesheet" href="<%= asset_path('orders.css') %>">
<% end %>
<h1>発注リスト</h1>
<table>
  <meta charset="utf-8">
  <link rel="stylesheet" href="<%= asset_path('index.css') %>">
  <link rel="stylesheet" href="<%= asset_path('print.css') %>" media="print">
  <tr>
    <th>発注日</th>
    <th>ステータス</th>
    <th>合計金額</th>
  </tr>
  <% @orders.each do |order| %>
    <tr>
      <td><%= order.order_date %></td>
      <td><%= order.status %></td>
      <td><%= number_to_currency(order.total_price, precision: 0, unit: "") %>円</td>
    </tr>
  <% end %>
</table>

<!-- 印刷ボタン -->
<button class="no-print" onclick="window.print()">このページを印刷</button>